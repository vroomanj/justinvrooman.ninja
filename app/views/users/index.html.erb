<div id="custom-container">

  <div class="col-md-6">
    <h2>Manage users</h2>
  </div>
  <div class="col-md-6">
    <%= link_to 'Create user', new_user_path, class: "btn btn-primary pull-right" %>
  </div>

  <table class="table table-hover">
    <tr>
      <th>User ID</th>
      <th>Email</th>
      <th>Sign In Count</th>
      <th>Created At</th>
      <th>Last Sign In</th>
      <th>Last Sign In IP</th>
      <th></th>
      <th></th>
    </tr>

    <% @users.each do |user| %>

    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <td><%= user.sign_in_count %></td>
      <td><%= time_ago_in_words(user.created_at) %></td>
      <% unless user.last_sign_in_at.nil? %>
      <td><%= time_ago_in_words(user.last_sign_in_at)%> ago</td>
      <% else %>
      <td>never</td>
      <% end %>
      <td><%= user.last_sign_in_ip %></td>
      <td><%= link_to 'Edit', edit_user_path(user.id), class: "btn btn-default pull-right" %></td>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default pull-right" %></td>
    </tr>

    <% end %>

  </table>

</div>